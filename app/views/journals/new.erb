<h3>New journal entry.</h3>

<form action="/journals" method="post">
 <div>
  <label for="title">Title</label>
  <input type="textarea" name="title" id="title" value="<%=@journal.title%>">
</div>
<br>
 <label for="date">Date: (00/00/0000)</label>
  <input type="textarea" name="date" id="date" value="<%=@journal.date%>">
<div>
  <label for="book_name">Book:</label>
  <input type="textarea" name='book_name' id='book_name' value="<%= @Verse.book_name %>">
</div>
 <br>

<div>
  <label for="chapter_number">Chapter number:</label>
  <input type="textarea" name="chapter_number" id="chapter_number" value="<%=@Verse.chapter_number %>">
</div>

<div>
  <label for="verse_number">Verse number:</label>
  <input type="textarea" name="verse_number" id="verse_number" value="<%=@Verse.verse_number %>">
</div>
<br>

<div>
  <label for="verse">Verse:</label>
  <input type="textbox" name='verse' id='verse' value="<%=@Verse.verse %>">
</div>
<br>

<div>
  <label for="interpretation">interpretation:</label>
  <input type="textbox" name='interpretation' id='interpretation' value="<%=@Vjournal.interpretation %>">
</div>
<br>

<div>
<label for="prayer">Prayer:</label>
<input type="textarea" name="prayer" id="prayer" value="<%=@journal.prayer%>">
</div> 
<br>

<input type="submit" value="save journal entry"></div>
</form>

